<%- include("header"); -%>
<div class="box1">
  <h1><%= ListName %></h1>
</div>

<div class="box2">
  <% list.forEach(function(item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%=item._id%>"
        class="checkbox"
        onchange="this.form.submit()"
      />
      <p><%=item.name%></p>
    </div>
    <input type="hidden" name="list" value="<%=ListName%>"></input>
  </form>
  <% }); %>
  <form class="submission" action="/" method="post">
    <input class="add" type="text" name="theText"  autocomplete="off"/>
    <button class="submit" name="list" type="submit" value="<%=ListName%>">
      +
    </button>
  </form>
</div>
<div class="box3">
  <form class = "submission" action="/newone" method="post">
    <!-- might need closing inputs. -->
    <input class="add new topCut" type="text" name="newEvent" placeholder="Create A New Page." autocomplete="off"/>
    <button class="submit new" name="list" type="submit">
      +
    </button>
  </form>
</div>

<%- include("footer"); -%>
